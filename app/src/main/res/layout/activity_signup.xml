<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:layout_margin="0dp"
    android:orientation="vertical"
    tools:context=".LoginActivity">

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="374dp"
        android:layout_height="44dp"
        android:layout_marginTop="148dp"
        android:layout_weight="1"
        android:ems="10"
        android:hint="Email"
        android:inputType="textPersonName"
        android:visibility="visible"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="16dp" />

    <EditText
        android:id="@+id/etFullName"
        android:layout_width="377dp"
        android:layout_height="40dp"
        android:layout_marginTop="200dp"
        android:layout_weight="1"
        android:ems="10"
        android:hint="Full Name"
        android:inputType="textPersonName"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="16dp" />

    <TextView
        android:id="@+id/gender"
        android:layout_width="83dp"
        android:layout_height="32dp"
        android:layout_marginTop="256dp"
        android:text="Gender"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.054"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="113dp"
        android:layout_height="32dp"
        android:layout_marginTop="256dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.892"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


    </RadioGroup>

    <EditText
        android:id="@+id/etLoginEmail"
        android:layout_width="377dp"
        android:layout_height="46dp"
        android:layout_marginTop="308dp"
        android:layout_weight="1"
        android:ems="10"
        android:hint="Username"
        android:paddingBottom="20dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="16dp" />

    <EditText
        android:id="@+id/etLoginPassword"
        android:layout_width="380dp"
        android:layout_height="49dp"
        android:layout_marginTop="368dp"
        android:layout_weight="1"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:paddingBottom="20dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="16dp" />

    <Button
        android:id="@+id/btnSignup"
        android:layout_width="140dp"
        android:layout_height="42dp"
        android:layout_marginStart="132dp"
        android:layout_marginTop="24dp"
        android:layout_weight="1"
        android:backgroundTint="#839DF6"
        android:text="SIGNUP"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnUploadPic"
        tools:text="SIGN UP" />

    <ImageView
        android:id="@+id/ivNavLogo"
        android:layout_width="84dp"
        android:layout_height="46dp"
        android:layout_marginTop="16dp"
        android:layout_weight="1"
        android:paddingBottom="20dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="16dp"
        tools:srcCompat="@tools:sample/avatars" />

    <RadioButton
        android:id="@+id/radioButton"
        android:layout_width="45dp"
        android:layout_height="33dp"
        android:layout_marginTop="256dp"
        android:text="M"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.273"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioButton
        android:id="@+id/female"
        android:layout_width="45dp"
        android:layout_height="33dp"
        android:layout_marginTop="256dp"
        android:text="F"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.396"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioButton
        android:id="@+id/other"
        android:layout_width="76dp"
        android:layout_height="33dp"
        android:layout_marginTop="256dp"
        android:text="Other"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.567"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvUpladPic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/btnUploadPic"
        app:layout_constraintTop_toBottomOf="@+id/etLoginPassword"
        app:layout_constraintVertical_bias="0.058"
        tools:layout_editor_absoluteX="16dp"
        tools:text="Upload Profile Picture" />

    <Button
        android:id="@+id/btnUploadPic"
        android:layout_width="374dp"
        android:layout_height="74dp"
        android:layout_marginTop="52dp"
        android:backgroundTint="#F4F4F4"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@+id/etLoginPassword"
        tools:layout_editor_absoluteX="16dp"
        tools:text="UPLOAD" />


</androidx.constraintlayout.widget.ConstraintLayout>